// SOLUTION FOR PROBLEM Equalize AB, PROBLEM CODE - EQUALIZEAB, CODECHEF

#include <bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin >> t;

    while (t--)
    {
        int a, b, x;
        cin >> a >> b >> x;

        if (a == b)
        {
            cout << "YES" << endl;
        }
        else
        {
            int n = abs(a - b);

            if ((n != x) && ((n % (x*2)) == 0))
            {
                cout << "YES" << endl;
            }
            else
            {
                cout << "NO" << endl;
            }
        }
    }
    return 0;
}
